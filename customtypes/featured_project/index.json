{
  "format": "page",
  "id": "featured_project",
  "label": "Featured Project",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "project_image": {
        "type": "Image",
        "config": {
          "label": "Featured Project Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "display_image": {
        "type": "Boolean",
        "config": {
          "label": "Show Featured Image On Project Page",
          "placeholder_false": "Featured Image Not Shown On Project Page Above Header ",
          "placeholder_true": "Featured Image Shown On Project Page Above Header ",
          "default_value": false
        }
      },
      "project_title": {
        "type": "Text",
        "config": {
          "label": "Project Title",
          "placeholder": ""
        }
      },
      "project_tag": {
        "type": "Select",
        "config": {
          "label": "Project Category Tag",
          "placeholder": "",
          "options": [
            "Kitchen Design",
            "Remodeling Design",
            "New Home Design",
            "Interior Design"
          ],
          "default_value": "Kitchen Design"
        }
      },
      "project_location": {
        "type": "Text",
        "config": {
          "label": "Project Location",
          "placeholder": ""
        }
      },
      "project_date": {
        "type": "Date",
        "config": {
          "label": "Project Date",
          "placeholder": ""
        }
      },
      "owner": {
        "type": "Link",
        "config": {
          "label": "Owner",
          "select": "document",
          "repeat": false,
          "customtypes": ["owner"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "story_section": {
              "type": "SharedSlice"
            },
            "project_section": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
