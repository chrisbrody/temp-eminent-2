{
  "format": "page",
  "id": "blog",
  "label": "Blog",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "blog_image": {
        "type": "Image",
        "config": {
          "label": "Featured Blog  Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "blog_title": {
        "type": "StructuredText",
        "config": {
          "label": "Blog Title",
          "placeholder": "",
          "allowTargetBlank": false,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "blog_title_short": {
        "type": "StructuredText",
        "config": {
          "label": "Blog Title Short (optional)",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "blog_description": {
        "type": "StructuredText",
        "config": {
          "label": "Blog Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "blog_tip_type": {
        "type": "Select",
        "config": {
          "label": "Blog Tip Type",
          "placeholder": "",
          "options": [
            "Bathroom Tips",
            "Interior tips",
            "Kitchen Tips",
            "Living Tips",
            "Remodeling Tips"
          ],
          "default_value": "Bathroom Tips"
        }
      },
      "blog_date": {
        "type": "Date",
        "config": {
          "label": "Blog Date",
          "placeholder": ""
        }
      },
      "owner": {
        "type": "Link",
        "config": {
          "label": "Owner",
          "select": "document",
          "repeat": false,
          "customtypes": ["owner"]
        }
      },
      "read_time": {
        "type": "Number",
        "config": {
          "label": "Article Read Time",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "blog_section": {
              "type": "SharedSlice"
            },
            "story_section": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
